<Window x:Class="UserSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="*"/>
         <RowDefinition Height="25"/>
         <RowDefinition Height="25"/>
      </Grid.RowDefinitions>
      <Grid Grid.Row="0" Background="Beige">
         <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>
         <Image Source="{Binding LastScreenshot}" Stretch="Uniform" Grid.Row="0"/>
         <Image Source="{Binding LastScreenshotOverlay}" Stretch="Uniform" Grid.Row="1"/>
      </Grid>
      <TextBlock Text="{Binding LastScreenshotWindow}" FontWeight="Bold" Foreground="Blue" Grid.Row="1" HorizontalAlignment="Center"/>
      <Button Click="Button_Click" Grid.Row="2"/>
   </Grid>
</Window>
